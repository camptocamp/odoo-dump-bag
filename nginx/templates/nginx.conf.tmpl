user  nginx;

worker_rlimit_nofile 1024;
worker_processes 1;

pid        /var/run/nginx.pid;
error_log  /var/log/nginx/error.log;

events {
  worker_connections 1024;
}

http {
  include /etc/nginx/mime.types;
  default_type  application/octet-stream;

  sendfile on;

  server_tokens on;

  types_hash_max_size 1024;
  types_hash_bucket_size 512;

  server_names_hash_bucket_size 64;
  server_names_hash_max_size 512;

  keepalive_timeout  65;
  tcp_nodelay        on;

  gzip              on;
  gzip_http_version 1.0;
  gzip_proxied      any;
  gzip_min_length   500;
  gzip_disable      "MSIE [1-6]\.";
  gzip_types        text/plain text/xml text/css
                    text/comma-separated-values
                    text/javascript
                    application/json
                    application/xml
                    application/x-javascript
                    application/javascript
                    application/atom+xml;

  proxy_redirect          off;
  proxy_connect_timeout   90;
  proxy_send_timeout      90;
  proxy_read_timeout      1h;
  proxy_buffers           32 4k;
  proxy_buffer_size       8k;
  proxy_set_header         Host $http_host;
  proxy_set_header         X-Real-IP $remote_addr;
  proxy_set_header         X-Forward-For $proxy_add_x_forwarded_for;
  proxy_set_header         X-Forwarded-Host $http_host;
  proxy_headers_hash_bucket_size 64;

  include /etc/nginx/extra.conf;

  {{ $bag_host := getenv "NGX_BAG_HOST" }}

  # Configuration for the server
  server {

    listen 80 default;

    client_max_body_size 1G;

    add_header              Strict-Transport-Security "max-age=31536000";

    include /etc/nginx/http-access.conf;
    {{ if getenv "NGX_HTPASSWD" }}
    auth_basic "test";
    auth_basic_user_file /etc/nginx/htpasswd;
    {{ end }}

    location / {
      proxy_pass http://{{ $bag_host }}:5000;
    }

    location /keys {
      # Allow to import public keys without messing with basic
      # auth in wget / curl. Anyway public keys are public.
      proxy_pass http://{{ $bag_host }}:5000;
      auth_basic off;
    }

    location /download {
      # Allow download from wget... we still have an ip restriction.
      # See if we want to change that... Dumps are encrypted anyway.
      proxy_pass http://{{ $bag_host }}:5000;
      auth_basic off;
    }

    location ~* ^/static/ {
        proxy_cache_valid 200 60m;
        proxy_buffering on;
        expires 864000;
        proxy_pass http://{{ $bag_host }}:5000;
    }

  }
}
